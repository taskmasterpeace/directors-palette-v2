{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'echo \"\" && echo \"=== DIRECTORS PALETTE SESSION START ===\" && echo \"Branch: $(git rev-parse --abbrev-ref HEAD 2>/dev/null || echo \"not a git repo\")\" && echo \"\" && CHANGES=$(git status --short 2>/dev/null | wc -l); if [ \"$CHANGES\" -gt 0 ]; then echo \"WARNING: $CHANGES uncommitted changes found!\"; git status --short | head -10; echo \"\"; echo \"COMMIT THESE BEFORE STARTING NEW WORK!\"; else echo \"Git status: Clean - no uncommitted changes\"; fi && echo \"==========================================\" && echo \"\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"(New-Object Media.SoundPlayer 'C:\\Windows\\Media\\Windows Notify System Generic.wav').PlaySync()\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"[console]::beep(1200, 200); Start-Sleep -Milliseconds 100; [console]::beep(1200, 200)\""
          }
        ]
      }
    ],
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matchers": [
          {
            "tool": "Edit",
            "file_path": "**/*.{ts,tsx,js,jsx}"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'npx prettier --write \"${file_path}\" 2>&1 | head -5 || true'"
          }
        ]
      },
      {
        "matchers": [
          {
            "tool": "Write",
            "file_path": "**/*.{ts,tsx,js,jsx}"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'npx prettier --write \"${file_path}\" 2>&1 && npx eslint --fix \"${file_path}\" 2>&1 | head -10 || true'"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matchers": [
          {
            "tool": "Edit",
            "file_path": "src/**/*"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "echo approve"
          }
        ]
      },
      {
        "matchers": [
          {
            "tool": "Write",
            "file_path": "src/**/*"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "echo approve"
          }
        ]
      },
      {
        "matchers": [
          {
            "tool": "Edit",
            "file_path": ".claude/**/*"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "echo approve"
          }
        ]
      },
      {
        "matchers": [
          {
            "tool": "Write",
            "file_path": ".claude/**/*"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "echo approve"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CHANGES=$(git status --short 2>/dev/null | wc -l); if [ \"$CHANGES\" -gt 0 ]; then echo \"⚠️ CONTEXT: $CHANGES uncommitted files\" && git status --short | head -5; fi'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/statusline.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true
  }
}
